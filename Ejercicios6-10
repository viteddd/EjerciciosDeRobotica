# Ejercicio 6
Numero1 = int(input("Introduce el primer numero para multiplicar:"))
Numero2 = int(input("Introduce el segundo numero para multiplicar:"))
resultado = (Numero1 * Numero2)
print("El resultado de la multiplicacion es:", resultado)

# Ejercicio 7
frase1 = input("Ingrese la primera frase: ")
frase2 = input("Ingrese la segunda frase: ")
fraseresultado = frase1 + " " + frase2
print("Frases concatenadas:")
print(fraseresultado)

# Ejercicio 8
base = float(input("Introduce la base del rectangulo:"))
altura = float(input("Introduce la altura del rectangulo:"))
CalculaArea = (base * altura)
print("El area del rectangulo es:", CalculaArea)

# Ejercicio 9
base = float(input("Introduce la base del rectangulo (perimetro):"))
altura = float(input("Introduce la altura del rectangulo (perimetro):"))
CalcularPerimetro = 2 * (base + altura)
print("El perimetro del rectangulo es:", CalcularPerimetro)

# Ejercicio 10
Determinarnumero = int(input("Introduce un numero para determinar si es positivo o negativo:"))
if Determinarnumero > 0:
    print("El numero es positivo.")
elif Determinarnumero < 0:
    print("El numero es negativo.")
else:
    print("El numero es cero.")
